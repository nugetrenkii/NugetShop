@model IEnumerable<NugetShop.Models.Bill>

@{
    ViewData["Title"] = "ViewBill";
}

<table class="table">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
               Tổng tiền
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                    @string.Format("{0:N0}đ", item.TotalAmount)
            </td>
            <td>
                    @(item.Status == 1 ? "Đã thanh toán" : "Chưa thanh toán")
            </td>
                <td>               
                    @Html.ActionLink("Chi tiết", "ViewBillDetail", new {  id=item.BillID  }) |
                </td>
        </tr>

}
    </tbody>
</table>
