@model IEnumerable<NugetShop.Models.Product>

<table class="table">
    <tbody>
            <div class="container-fluid pt-5">
                <div class="row px-xl-5">
                    <div class="col-lg-3 col-md-12">
                        <!-- Danh mục -->
                        <div class="border-bottom mb-4 pb-4" style="text-align: center;">
                            <h2 class="font-weight-semi-bold mb-4">Danh mục</h2>
                            <form class="danhmuc">
                                <div class="custom-control d-flex align-items-center justify-content-between mb-3">
                                    <label class="custom-control-label" for="price-1">
                                        <a href=""
                                       style="text-decoration: none; color: black;">Áo Hoodie</a>
                                    </label>
                                </div>
                                <div class="custom-control d-flex align-items-center justify-content-between mb-3">
                                    <label class="custom-control-label" for="price-2">
                                        <a href=""
                                       style="text-decoration: none; color: black;">Áo Phông Cartoon</a>
                                    </label>

                                </div>
                                <div class="custom-control d-flex align-items-center justify-content-between mb-3">

                                    <label class="custom-control-label" for="price-3">
                                        <a href=""
                                       style="text-decoration: none; color: black;">Quần Đùi Cartoon</a>
                                    </label>

                                </div>
                            </form>
                        </div>
                        <!-- end danh mục -->
                        <!-- lọc giá -->
                        <div class="border-bottom mb-4 pb-4">
                            <h5 class="font-weight-semi-bold mb-4">Lọc giá</h5>
                            <form>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="color-2">
                                    <label class="custom-control-label" for="price-all">Tất cả giá</label>
                                    <span class="badge border font-weight-normal text-dark ">All</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="color-1">
                                    <label class="custom-control-label" for="color-1">100.000 - 200.000</label>
                                    <span class="badge border font-weight-normal text-dark  bg-light">VNĐ</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="color-2">
                                    <label class="custom-control-label" for="color-2">200.000 - 400.000</label>
                                    <span class="badge border font-weight-normal text-dark bg-light">VNĐ</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="color-3">
                                    <label class="custom-control-label" for="color-3">400.000 - 600.000</label>
                                    <span class="badge border font-weight-normal text-dark bg-light">VNĐ</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="color-4">
                                    <label class="custom-control-label" for="color-4">600.000 - 1.000.000</label>
                                    <span class="badge border font-weight-normal text-dark bg-light ">VNĐ</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                                    <input type="checkbox" class="custom-control-input" id="color-5">
                                    <label class="custom-control-label" for="color-5">1.000.000 - 1.200.000</label>
                                    <span class="badge border font-weight-normal text-dark bg-light ">VNĐ</span>
                                </div>
                            </form>
                        </div>
                        <!--  End -->
                        <!-- màu -->
                        <div class="border-bottom mb-4 pb-4">
                            <h5 class="font-weight-semi-bold mb-4">Lọc màu</h5>
                            <form>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="color-2">
                                    <label class="custom-control-label" for="price-all">Tất cả màu</label>
                                    <span class="badge border font-weight-normal text-dark ">All</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="color-1">
                                    <label class="custom-control-label" for="color-1">Đen</label>
                                    <span class="badge border font-weight-normal text-dark  bg-dark">000</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="color-2">
                                    <label class="custom-control-label" for="color-2">Trắng</label>
                                    <span class="badge border font-weight-normal text-white bg-white">000</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="color-3">
                                    <label class="custom-control-label" for="color-3">Đỏ</label>
                                    <span class="badge border font-weight-normal text-danger bg-danger">000</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="color-4">
                                    <label class="custom-control-label" for="color-4">Xanh</label>
                                    <span class="badge border font-weight-normal text-primary bg-primary ">000</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                                    <input type="checkbox" class="custom-control-input" id="color-5">
                                    <label class="custom-control-label" for="color-5">Xanh lá</label>
                                    <span class="badge border font-weight-normal text-success bg-success ">000</span>
                                </div>
                            </form>
                        </div>
                        <!--  end -->
                        <!-- size  -->
                        <div class="mb-5">
                            <h5 class="font-weight-semi-bold mb-4">Lọc kích cỡ</h5>
                            <form>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" checked id="size-all">
                                    <label class="custom-control-label" for="size-all">Tất cả kích cỡ</label>
                                    <span class="badge border font-weight-normal text-dark">All</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="size-1">
                                    <label class="custom-control-label" for="size-1">XS</label>
                                    <span class="badge border font-weight-normal text-dark">Nhỏ</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="size-2">
                                    <label class="custom-control-label" for="size-2">S</label>
                                    <span class="badge border font-weight-normal text-dark">Nhỏ</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="size-3">
                                    <label class="custom-control-label" for="size-3">M</label>
                                    <span class="badge border font-weight-normal text-dark">Vừa</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" id="size-4">
                                    <label class="custom-control-label" for="size-4">L</label>
                                    <span class="badge border font-weight-normal text-dark">Lớn</span>
                                </div>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                                    <input type="checkbox" class="custom-control-input" id="size-5">
                                    <label class="custom-control-label" for="size-5">XL</label>
                                    <span class="badge border font-weight-normal text-dark">Lớn</span>
                                </div>
                            </form>
                        </div>
                        <!--  nd -->
                    </div>



                    <!-- sản phẩm -->
                    <div class="col-lg-9 col-md-12">
                        <div class="row pb-3">
                            <div class="col-12 pb-1">
                                <div class="d-flex align-items-center justify-content-between mb-4">

   @*                             <form asp-action="Search" asp-controller="Product">
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="Tìm theo tên" >
                                        <button class="btn btn-outline-dark" type="submit" style="color: white; ">Search</button>
                                            <div class="input-group-append">
                                                <span class="input-group-text bg-transparent text-primary">
                                                    <img src="~/img/icons8-search-24.png" alt="">
                                                </span>
                                            </div>
                                        </div>
                                    </form>*@

                               

                                    <div class="dropdown ml-4">
                                        <button class="btn border dropdown-toggle" type="button" id="triggerId"
                                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Sắp xếp
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="triggerId">
                                            <a class="dropdown-item" href="#">Gần đây</a>
                                            <a class="dropdown-item" href="#">Phổ biến</a>
                                            <a class="dropdown-item" href="#">Đánh giá tốt nhất</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- san pham -->
                            @foreach (var item in Model)
                            {
                            <div class="col-lg-4 col-md-6 col-sm-12 pb-1" >                           
                                    <div class="card product-item border-0 mb-4">
                                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                            <img class="img-fluid w-100" src="@Url.Content(item.Image.Path)" alt="">
                                        </div>
                                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                        <h6 class="text-truncate mb-3" style="text-decoration: none">@Html.ActionLink(item.ProductName, "Details", new {  id=item.ProductID })</h6>                                     
                                            <div class="d-flex justify-content-center">
                                                <h5 style="margin-right: 5px"> @string.Format("{0:N0}đ", item.Price)</h5>
                                            </div>
                                        <div class="d-flex justify-content-center">
                                            Số lượng:
                                            <p style="margin-right: 5px"> @item.Quantity</p>
                                        </div>
                                        </div>
                                        <div class="card-footer d-flex justify-content-between bg-light border">
                                            <a ng-click="getdetail(sp.id)"
                                           class="btn btn-sm text-dark p-0">
                                                <i class="fa fa-eye text-primary mr-1"></i>Xem
                                                thông tin
                                            </a>
                                            <a href="" class="btn btn-sm text-dark p-0" ng-click="addgiohang()">
                                                <i class="fa fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng
                                            </a>
                                        </div>
                                    </div>
                             
                            </div>
                            }
                            <div class="col-12 pb-1">
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-center mb-3">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                        </li>
                                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                    <!-- sản phẩm end -->
                </div>
            </div>
            <!-- body end -->

    </tbody>
</table>
